<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Oswald:400,600,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/fundStyle.css">
    <link rel="stylesheet" href="/stylesheets/navbarStyle.css">
    <title>Money Manager</title>
</head>
<body>

    <section class="left">
        <div class="nav child">
            <nav>
                <a href="./fundIndexRefactor.html">Funds</a>
                <a href="./landingIndex.html"><i class="fas fa-wallet"></i></a>
                <a href="./splitterIndexRefactor.html">Splitter</a>
            </nav>
        </div>


        <div class="funds">
            <ul id="fundList">
                <% funds.forEach(function(fund) { %>
                    <li> <form action="/funds/<%= fund._id %>?_method=DELETE" method="POST"> <span class="icon"><i class="fas fa-trash"></i></span> </form> <span class="fundName"><%= fund.name %></span> - <span class="fund-money"><span class="amountSaved"><%= fund.amount %></span>/ <span class="goal"><%= fund.goal %></span> </span> <div class="progress-bar"><div class="progress"><span class="progress-text">75%</span></div></div> </li>
                <% }) %>
            </ul>
        </div>

        <div class="buttonContainer">
            <button class="btn" id="newFundBtn"><i class="fas fa-plus"></i></button>
        </div>

        <div class="modal">
            <div class="modal-content">
                <form action="/funds" method="POST">
                    <p>Fund Name</p>
                    <div class="break"></div>
                    <input type="text" id="name" name="name">
                    <div class="break"></div>
                    <p>Starting Amount</p>
                    <div class="break"></div>
                    <input type="text" id="startAmount" name="amount">
                    <div class="break"></div>
                    <p>Goal Amount</p>
                    <div class="break"></div>
                    <input type="text" id="goal" name="goal">
                    <div class="break"></div>
                    <button class="btn" id="addBtn">Add!</button>
                </form>
            </div>
        </div>
    </section>

    <script src="/scripts/fundScript.js"></script>
</body>
</html>